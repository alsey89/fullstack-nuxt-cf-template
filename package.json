{
  "name": "cf-fullstack-template",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "preview": "nuxt preview",
    "deploy": "npm run db:migrate && wrangler deploy",
    "db:generate": "drizzle-kit generate",
    "db:migrate:remote:staging": "wrangler d1 migrations apply template-staging --remote --config=wrangler.staging.jsonc",
    "db:migrate:local:staging": "wrangler d1 migrations apply template-staging --local --config=wrangler.staging.jsonc",
    "db:reset:local": "rm -rf .wrangler/state/v3/d1 && npm run db:migrate:local:staging",
    "db:migrate:safe": "tsx scripts/safe-migrate.ts",
    "db:migrate:safe:staging": "tsx scripts/safe-migrate.ts staging",
    "db:migrate:safe:production": "tsx scripts/safe-migrate.ts production",
    "test": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@formkit/auto-animate": "^0.8.2",
    "@nuxt/eslint": "^1.6.0",
    "@nuxt/fonts": "^0.11.4",
    "@nuxt/icon": "^1.15.0",
    "@nuxt/image": "^1.10.0",
    "@nuxt/test-utils": "^3.19.2",
    "@nuxtjs/i18n": "^9.5.3",
    "@pinia/nuxt": "^0.11.0",
    "@tailwindcss/vite": "^4.1.11",
    "@vee-validate/zod": "^4.15.1",
    "@vueuse/core": "^13.5.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dayjs-nuxt": "^2.1.11",
    "drizzle-orm": "^0.44.6",
    "embla-carousel-vue": "^8.6.0",
    "eslint": "^9.31.0",
    "gsap": "^3.12.7",
    "isomorphic-dompurify": "^2.28.0",
    "jose": "^6.1.0",
    "lucide-vue-next": "^0.525.0",
    "nitro-cloudflare-dev": "^0.2.2",
    "nuxt": "^4.0.0",
    "nuxt-auth-utils": "^0.5.25",
    "pinia": "^3.0.3",
    "pinia-plugin-persistedstate": "^4.2.0",
    "posthog-js": "^1.236.7",
    "reka-ui": "^2.3.2",
    "shadcn-nuxt": "^2.2.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.11",
    "tw-animate-css": "^1.3.5",
    "validator": "^13.15.15",
    "vaul-vue": "^0.4.1",
    "vee-validate": "^4.15.0",
    "vue": "^3.5.17",
    "vue-router": "^4.5.1",
    "vue-sonner": "^2.0.2",
    "wrangler": "^4.42.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/dompurify": "^3.0.5",
    "@types/validator": "^13.15.3",
    "@vite-pwa/nuxt": "^1.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "drizzle-kit": "^0.31.5",
    "tsx": "^4.19.2",
    "vitest": "^3.2.4"
  }
}
